<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">
    <fragment
        android:id="@+id/navHomeFragment"
        android:name="com.example.rickandmorty.ui.NavHomeFragment"
        android:label="NavHomeFragment" />
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.rickandmorty.ui.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_navHomeFragment"
            app:destination="@id/navHomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.rickandmorty.ui.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.rickandmorty.ui.register.RegisterFragment"
        android:label="RegisterFragment" />
    <fragment
        android:id="@+id/characterDetailsFragment"
        android:name="com.example.rickandmorty.ui.characterDetails.CharacterDetailsFragment"
        android:label="CharacterDetailsFragment" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.rickandmorty.ui.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <include app:graph="@navigation/home_nav_graph" />
    <action
        android:id="@+id/action_global_registerFragment"
        app:destination="@id/registerFragment" />

    <action
        android:id="@+id/action_global_characterDetailsFragment"
        app:destination="@id/characterDetailsFragment" />


</navigation>